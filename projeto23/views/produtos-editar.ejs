<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('partials/menu') -%>
    <main class="container mt-3">
      Produtos / Editar
      <form class="card mt-3 p-3" action="/produtos/update" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= produto.id %>" />
        <label class="form-label" for="categoria_id">Categoria</label>
        <select class="form-control" name="categoria_id">
          <option value=""></option>
          <% for (let categoria of categorias) { %>
          <option value="<%= categoria.id %>" <%= (categoria.id == produto.categoria_id ? 'selected' : '') %>><%= categoria.nome %></option>
          <% } %>
        </select>
        <label class="form-label mt-2" for="nome">Nome</label>
        <input class="form-control" type="text" name="nome" value="<%= produto.nome %>" />
        <label class="form-label mt-2" for="valor"> Valor </label>
        <input class="form-control" type="text" name="valor" value="<%= produto.valor %>" />
        <label class="form-label mt-2" for="visivel"> Visível </label>
        <select class="form-control" name="visivel">
          <option value="1" <%= produto.visivel == '1' ? 'selected' : null %>>Sim</option>
          <option value="0" <%= produto.visivel == '0' ? 'selected' : null %>>Não</option>
        </select>
        <label for="imagem" class="form-label mt-2">Imagem</label>
        <% if (produto.imagem) { %>
          <a href="/uploads/<%= produto.imagem %>" class="card p-2" target="_blank">
            <img src="/uploads/<%= produto.imagem %>" style="max-width: 100px;">
          </a>
        <% } %>
        <input type="file" name="imagem" class="form-control bg-light mt-2">
        <button type="submit" class="mt-2 btn btn-primary">Salvar</button>
      </form>
    </main>
  </body>
</html>
