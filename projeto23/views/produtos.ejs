<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produtos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      th, td {
        vertical-align: middle;
      }
    </style>
  </head>
  <body>
    <%- include('partials/menu') -%>
    <main class="container mt-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>Produtos...</div>
        <div><a href="/produtos/novo" class="btn btn-success">Novo</a></div>
      </div>
      <table class="table table-bordered table-hover mt-3">
        <tr>
          <th>ID</th>
          <th>Categoria</th>
          <th>Nome</th>
          <th>Valor</th>
          <th>Visível</th>
          <th class="text-center">Ações</th>
        </tr>
        <% for (let produto of produtos) { %>
        <tr>
          <td><%= produto.id %></td>
          <td><%= produto.categoria_nome %></td>
          <td><%= produto.nome %></td>
          <td><%= produto.valor %></td>
          <td><%= produto.visivel %></td>
          <td class="text-center">
            <a class="btn btn-warning" href="/produtos/editar?id=<%= produto.id %>"> Editar </a>
            <a class="btn btn-danger" onclick="confirmarExclusao('<%= produto.id %>')"> Excluir </a>
          </td>
        </tr>
        <% } %>
      </table>
    </main>
    <script>
      function confirmarExclusao(id) {
        let confirmado = confirm("Deseja realmente excluir o produto?");
        if (confirmado) {
          window.location.replace(`/produtos/excluir?id=${id}`);
        }
      }
    </script>
  </body>
</html>
