<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Produtos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('partials/menu') -%>

    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <span class="btn ps-0">
          Produtos / Novo
        </span>
      </div>

      <form
        class="card p-4"
        action="/produtos/insert"
        method="post"
        enctype="multipart/form-data"
      >
        <label class="form-label" for="nome"> Categoria </label>

        <select class="form-control" name="categoria_id">
          <option value=""></option>
          <% for (let categoria of categorias) { %>
          <option value="<%= categoria.id %>"><%= categoria.nome %></option>
          <% } %>
        </select>

        <label class="form-label mt-3" for="nome"> Nome </label>
        <input class="form-control" type="text" name="nome" value="" required />

        <label class="form-label mt-3" for="valor"> Valor </label>
        <input
          class="form-control"
          type="text"
          name="valor"
          value=""
          required
        />

        <label class="form-label mt-3" for="visivel"> Visível </label>
        <select class="form-control" name="visivel">
          <option value="1">Sim</option>
          <option value="0">>Não</option>
        </select>

        <label class="form-label mt-3" for="imagem"> Imagem </label>
        <input class="form-control" type="file" name="imagem" />

        <button type="submit" class="btn btn-primary mt-4">Salvar</button>
      </form>
    </div>

    <%- include('partials/footer') -%>
    
  </body>
</html>
